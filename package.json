  "author": "v1rtl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/talentlessguy/use-onboard/issues"
  },
  "homepage": "https://github.com/talentlessguy/use-onboard#readme",
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@rollup/plugin-typescript": "^8.2.3",
    "@testing-library/react-hooks": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "bnc-onboard": "^1.30.0",
    "esbuild-node-loader": "^0.1.1",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "ethers": "^5.4.1",
    "husky": "^7.0.1",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.53.2",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "bnc-onboard": ">=1.30",
    "ethers": ">=5.4",
    "react": ">=17"
  },
  "files": [
    "dist"
  ],
  "funding": {
    "type": "individual",
    "url": "https://github.com/talentlessguy/use-onboard?sponsor=1"
