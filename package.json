{
  "name": "use-onboard",
  "version": "0.2.6",
  "description": "A React Web3 wallet hook for Onboard.js library.",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=12.x || 14.x || >=16"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "format": "prettier --check \"./**/*.ts\"",
    "format:fix": "prettier --write \"./**/*.ts\"",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "mocha",
    "test:coverage": "npm run test -- --coverage --watchAll=false",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/talentlessguy/use-onboard.git"
  },
  "keywords": [
    "ethereum",
    "blockchain",
    "react",
    "hooks",
    "react-hook",
    "metamask"
  ],
  "author": "v1rtl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/talentlessguy/use-onboard/issues"
  },
  "homepage": "https://github.com/talentlessguy/use-onboard#readme",
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^13.2.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.13",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "bnc-onboard": "^1.32.0",
    "esbuild-node-loader": "^0.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.10.1",
    "ethers": "^5.4.3",
    "ganache-cli": "^6.12.2",
    "husky": "^7.0.1",
    "mocha": "^9.0.3",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.55.1",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.1.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "bnc-onboard": ">=1",
    "ethers": ">=5.4",
    "react": ">=17"
  },
  "files": [
    "dist"
  ],
  "funding": {
    "type": "individual",
    "url": "https://github.com/talentlessguy/use-onboard?sponsor=1"
  },
  "sideEffects": false
}
