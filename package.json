    "node": ">=12.x || 14.x || >=16"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "format": "prettier --check \"./**/*.ts\"",
    "format:fix": "prettier --write \"./**/*.ts\"",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/talentlessguy/use-onboard.git"
  },
  "keywords": [
    "ethereum",
    "blockchain",
    "react",
    "hooks",
    "react-hook",
    "metamask"
